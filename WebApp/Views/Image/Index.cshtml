@using WebApp.ML.DataModels
@{
    ViewData["Title"] = "Index";

    var result = ViewBag.ImagePredicted as ImagePredictedLabelWithProbability;
}

<h1>Image prediction</h1>

<br />
<br />
<br />

<form method="post" enctype="multipart/form-data">
    <div>
        <p>Upload a file image using this form to predict its label:</p>
    </div>
    <div>
        <input type="file" name="imageFile">
    </div>
    <div>
        <br />
        <input type="submit" value="Upload File" name="submit">
    </div>

</form>

<br />
<br />
@if (result != null)
{
    <p>@result.PredictedLabel</p>
    <p>@result.Probability</p>
}


<script src="~/js/upload.js"></script>

<br />
<br />
<br />

